{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Execute command",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/${input:runtime}/qala.dll",
            "args": [
                "${input:command}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "id": "command",
            "type": "promptString",
            "description": "Type in the command to execute (without the execution name at the beginning)",
        },
        {
            "id": "runtime",
            "type": "pickString",
            "description": "Select the runtime",
            "options": [
                {
                    "label": "Windows",
                    "value": "win-x64"
                },
                {
                    "label": "Linux",
                    "value": "linux-x64"
                },
                {
                    "label": "macOS",
                    "value": "osx-arm64"
                }
            ]
        }
    ]
}

