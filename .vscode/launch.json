{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Help",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/win-x64/Qala.Cli.dll",
            "args": [
                "${input:command}",
                "--help"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Login",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/win-x64/Qala.Cli.dll",
            "args": [
                "login"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Create Config File",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/win-x64/Qala.Cli.dll",
            "args": [
                "config",
                "-k",
                "${input:apiKey}",
                "-e",
                "${input:environmentId}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Set Environment",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/win-x64/Qala.Cli.dll",
            "args": [
                "environment",
                "set",
                "-e",
                "${input:environmentId}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Get Current Environment",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/win-x64/Qala.Cli.dll",
            "args": [
                "environment",
                "current"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Create Environment",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Qala.Cli/bin/Debug/net8.0/win-x64/Qala.Cli.dll",
            "args": [
                "environment",
                "create",
                "-n",
                "${input:environmentName}",
                "-r",
                "${input:environmentRegion}",
                "-t",
                "${input:environmentType}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "id": "apiKey",
            "type": "promptString",
            "description": "Enter the API key"
        },
        {
            "id": "environmentId",
            "type": "promptString",
            "description": "Enter the environment ID"
        },
        {
            "id": "environmentName",
            "type": "promptString",
            "description": "Enter the environment name"
        },
        {
            "id": "environmentRegion",
            "type": "promptString",
            "description": "Enter the environment region"
        },
        {
            "id": "environmentType",
            "type": "pickString",
            "description": "Select the environment type",
            "options": [
                {
                    "label": "Development",
                    "value": "development"
                },
                {
                    "label": "Production",
                    "value": "production"
                }
            ]
        },
        {
            "id": "command",
            "type": "pickString",
            "description": "Select the command",
            "options": [
                {
                    "label": "help",
                    "value": ""
                },
                {
                    "label": "login",
                    "value": "login"
                },
                {
                    "label": "config",
                    "value": "config"
                },
                {
                    "label": "environment",
                    "value": "environment"
                }
            ]
        }
    ]
}

