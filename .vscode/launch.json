{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Help",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Cli/bin/Debug/net8.0/Cli.dll",
            "args": [
                "--help"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Create Config File",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Cli/bin/Debug/net8.0/Cli.dll",
            "args": [
                "createConfigFile",
                "-k",
                "${input:apiKey}",
                "-e",
                "${input:environmentId}"
            ],
        },
        {
            "name": "Create Topic",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Cli/bin/Debug/net8.0/Cli.dll",
            "args": [
                "createTopic",
                "${input:topicName}",
                "-d",
                "${input:topicDescription}",
                "-e",
                "${input:topicEventTypeId}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Create Subscription",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Cli/bin/Debug/net8.0/Cli.dll",
            "args": [
                "createSubscription",
                "${input:subscriptionName}",
                "-t",
                "${input:topicName}",
                "-d",
                "${input:subscriptionDescription}",
                "-e",
                "${input:topicEventTypeId}",
                "-w",
                "${input:webhookUrl}",
                "-r",
                "${input:maxDeliveryAttempts}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "id": "topicName",
            "type": "promptString",
            "description": "Enter the topic name"
        },
        {
            "id": "topicDescription",
            "type": "promptString",
            "description": "Enter the topic description"
        },
        {
            "id": "topicEventTypeId",
            "type": "promptString",
            "description": "Enter the event type IDs (comma-separated)"
        },
        {
            "id": "subscriptionName",
            "type": "promptString",
            "description": "Enter the subscription name"
        },
        {
            "id": "subscriptionDescription",
            "type": "promptString",
            "description": "Enter the subscription description"
        },
        {
            "id": "webhookUrl",
            "type": "promptString",
            "description": "Enter the webhook URL"
        },
        {
            "id": "maxDeliveryAttempts",
            "type": "promptString",
            "description": "Enter the maximum delivery attempts"
        },
        {
            "id": "apiKey",
            "type": "promptString",
            "description": "Enter the API key"
        },
        {
            "id": "environmentId",
            "type": "promptString",
            "description": "Enter the environment ID"
        }
    ]
}

